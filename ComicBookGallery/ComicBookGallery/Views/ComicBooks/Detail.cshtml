@{
    Layout = null;
    var seriesTitle = "The Amazing Spider Man";
    var issueNmuber = 700;
    var description = "<p>Final issue! Witness the final</p>";
    var artists = new string[] { "Script: Dan Slot", "Pencils: Hoberto Ramos", "Inks: Victor Olanza", "Colors: Edgar Elgado", "Letters: Chris" };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@seriesTitle</title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNmuber</h2>
        <h5>Description:</h5>
        <div>@Html.Raw(description)</div>
        <h5>Artists:</h5>
        <div>
            @foreach (var artist in artists)
            {
                <li>* @artist</li>
            }

        </div>
    </div>
</body>
</html>
